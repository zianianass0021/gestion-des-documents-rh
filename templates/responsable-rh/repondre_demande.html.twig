{% extends 'base.html.twig' %}

{% block title %}Répondre à la Demande/Réclamation{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-reply me-2"></i>Répondre à la Demande/Réclamation
                    </h5>
                </div>
                <div class="card-body">
                    <!-- Informations sur la demande -->
                    <div class="alert alert-info">
                        <h6><i class="fas fa-info-circle me-2"></i>Demande/Réclamation de {{ demande.employe.prenom }} {{ demande.employe.nom }}</h6>
                        <p class="mb-1"><strong>Titre :</strong> {{ demande.titre }}</p>
                        <p class="mb-0"><strong>Date :</strong> {{ demande.dateCreation|date('d/m/Y à H:i') }}</p>
                    </div>

                    <div class="mb-4">
                        <h6><i class="fas fa-file-text me-2"></i>Contenu de la demande/réclamation</h6>
                        <div class="bg-light p-3 rounded">
                            {{ demande.contenu|nl2br }}
                        </div>
                    </div>

                    <!-- Formulaire de réponse -->
                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_label(form.statut) }}
                            {{ form_widget(form.statut) }}
                            {{ form_errors(form.statut) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.reponse) }}
                            {{ form_widget(form.reponse) }}
                            {{ form_errors(form.reponse) }}
                            <div class="form-text">
                                Ajoutez des commentaires ou des explications pour votre décision.
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="{{ path('responsable_voir_demande', {'id': demande.id}) }}" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Retour
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-check me-2"></i>Envoyer la réponse
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>

            <div class="card mt-4">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="fas fa-lightbulb me-2"></i>Conseils
                    </h6>
                </div>
                <div class="card-body">
                    <ul class="mb-0">
                        <li>Soyez clair et précis dans votre réponse</li>
                        <li>Expliquez les raisons de votre décision</li>
                        <li>Si vous refusez, proposez des alternatives si possible</li>
                        <li>L'employé recevra une notification de votre réponse</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
