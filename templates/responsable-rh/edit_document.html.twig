{% extends 'base.html.twig' %}

{% block title %}Modifier un Document{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h1 class="mb-0">
                    <i class="fas fa-edit me-2"></i>
                    Modifier un Document
                </h1>
            </div>
            <div class="card-body">
                {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.abbreviation, 'Abréviation', {'class': 'form-label'}) }}
                            {{ form_widget(form.abbreviation, {'class': 'form-control'}) }}
                            {{ form_errors(form.abbreviation) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.libelleComplet, 'Libellé Complet', {'class': 'form-label'}) }}
                            {{ form_widget(form.libelleComplet, {'class': 'form-control'}) }}
                            {{ form_errors(form.libelleComplet) }}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.typeDocument, 'Type de Document', {'class': 'form-label'}) }}
                            {{ form_widget(form.typeDocument, {'class': 'form-control'}) }}
                            {{ form_errors(form.typeDocument) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.usage, 'Usage', {'class': 'form-label'}) }}
                            {{ form_widget(form.usage, {'class': 'form-control'}) }}
                            {{ form_errors(form.usage) }}
                        </div>
                    </div>
                </div>
                
                <!-- Champ de fichier -->
                <div class="row">
                    <div class="col-12">
                        <div class="mb-3">
                            {{ form_label(form.file, 'Fichier', {'class': 'form-label'}) }}
                            {{ form_widget(form.file, {'class': 'form-control'}) }}
                            {{ form_errors(form.file) }}
                            <small class="form-text text-muted">
                                <i class="fas fa-info-circle me-1"></i>
                                Formats acceptés : PDF, DOC, DOCX, JPG, PNG, GIF (max 10MB)
                                <br>
                                <i class="fas fa-exclamation-triangle me-1"></i>
                                Laissez vide pour conserver le fichier actuel
                            </small>
                        </div>
                    </div>
                </div>
                
                <div class="d-flex justify-content-between mt-4">
                    <a href="{{ path('responsable_manage_dossiers') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Retour
                    </a>
                    <div>
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save me-2"></i>Enregistrer
                        </button>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
