{% extends 'base_sidebar.html.twig' %}

{% block title %}KPI - Fiabilisation par Nature de Contrat{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <a href="{{ path('responsable_kpi_index') }}" class="btn btn-outline-secondary mb-3">
                <i class="fas fa-arrow-left me-1"></i>
                Retour aux KPI
            </a>
            <h1 class="mb-3">
                <i class="fas fa-file-contract me-2"></i>
                A. Fiabilisation Dossier RH par Nature de Contrat
            </h1>
            <p class="text-muted">Taux d'avancement des documents par type de contrat</p>
        </div>
    </div>

    <!-- KPI Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                <i class="fas fa-table me-2"></i>
                Tableau de Fiabilisation
            </h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped mb-0">
                    <thead class="table-light">
                        <tr>
                            <th rowspan="2" class="align-middle">Nature de Contrat</th>
                            <th colspan="2" class="text-center bg-info-subtle">Dossier Personnel</th>
                            <th colspan="2" class="text-center bg-success-subtle">Ayant Droits</th>
                        </tr>
                        <tr>
                            <th class="text-center bg-info-subtle">Avancement</th>
                            <th class="text-center bg-info-subtle">Docs Manquants</th>
                            <th class="text-center bg-success-subtle">Avancement</th>
                            <th class="text-center bg-success-subtle">Docs Manquants</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for row in data %}
                        <tr>
                            <td class="fw-bold">{{ row.contract_type }}</td>
                            <td class="text-center">
                                {% set personnel_pct = row.personnel_percentage %}
                                <span class="badge 
                                    {% if personnel_pct >= 80 %}bg-success
                                    {% elseif personnel_pct >= 50 %}bg-warning
                                    {% else %}bg-danger{% endif %} 
                                    fs-6">
                                    {{ personnel_pct|number_format(2) }}%
                                </span>
                            </td>
                            <td class="text-center">
                                {% set missing = row.personnel_expected - row.personnel_uploaded %}
                                <span class="badge bg-secondary">{{ missing|number_format(0) }}</span>
                            </td>
                            <td class="text-center">
                                {% set ayant_pct = row.ayant_droits_percentage %}
                                <span class="badge 
                                    {% if ayant_pct >= 80 %}bg-success
                                    {% elseif ayant_pct >= 50 %}bg-warning
                                    {% else %}bg-danger{% endif %} 
                                    fs-6">
                                    {{ ayant_pct|number_format(2) }}%
                                </span>
                            </td>
                            <td class="text-center">
                                {% set missing_ayant = row.ayant_droits_expected - row.ayant_droits_uploaded %}
                                <span class="badge bg-secondary">{{ missing_ayant|number_format(0) }}</span>
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="5" class="text-center text-muted py-4">
                                <i class="fas fa-inbox fa-3x mb-3 d-block"></i>
                                Aucune donnée disponible
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Legend -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h6 class="mb-3">
                        <i class="fas fa-info-circle me-2"></i>
                        Légende
                    </h6>
                    <div class="row">
                        <div class="col-md-4">
                            <span class="badge bg-success me-2">≥ 80%</span> Bon niveau
                        </div>
                        <div class="col-md-4">
                            <span class="badge bg-warning me-2">50-79%</span> Niveau moyen
                        </div>
                        <div class="col-md-4">
                            <span class="badge bg-danger me-2">< 50%</span> Niveau faible
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

