{% extends 'base.html.twig' %}

{% block title %}Assigner Employé à Organisation{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="h3 mb-0 text-gray-800">
                        <i class="fas fa-user-plus me-2"></i>
                        Assigner Employé à Organisation
                    </h1>
                    <p class="text-muted mb-0">Lier un employé à une organisation</p>
                </div>
                <div>
                    <a href="{{ path('responsable_manage_organisations') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Retour
                    </a>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-8">
                    <div class="card shadow">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">
                                <i class="fas fa-link me-2"></i>
                                Assignation
                            </h6>
                        </div>
                        <div class="card-body">
                            {{ form_start(form) }}
                            
                            <div class="mb-3">
                                {{ form_label(form.organisation, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.organisation, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.organisation) }}
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.employeeContrat, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.employeeContrat, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.employeeContrat) }}
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        {{ form_label(form.dateDebut, null, {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.dateDebut, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.dateDebut) }}
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        {{ form_label(form.dateFin, null, {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.dateFin, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.dateFin) }}
                                    </div>
                                </div>
                            </div>

                            <div class="d-flex justify-content-between">
                                <a href="{{ path('responsable_manage_organisations') }}" class="btn btn-secondary">
                                    <i class="fas fa-times me-2"></i>Annuler
                                </a>
                                <button type="submit" class="btn btn-success">
                                    <i class="fas fa-link me-2"></i>Assigner
                                </button>
                            </div>

                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="card shadow">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">
                                <i class="fas fa-info-circle me-2"></i>
                                Information
                            </h6>
                        </div>
                        <div class="card-body">
                            <h6>Assignation Organisation</h6>
                            <p class="text-muted small">
                                Cette fonctionnalité permet de lier un employé (via son contrat) à une organisation spécifique.
                            </p>
                            
                            <h6 class="mt-3">Étapes :</h6>
                            <ol class="text-muted small">
                                <li>Sélectionner l'organisation</li>
                                <li>Choisir le contrat employé</li>
                                <li>Définir les dates d'assignation</li>
                                <li>Valider l'assignation</li>
                            </ol>
                            
                            <div class="alert alert-info mt-3">
                                <i class="fas fa-lightbulb me-2"></i>
                                <strong>Conseil :</strong> La date de fin est optionnelle pour les assignations en cours.
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
