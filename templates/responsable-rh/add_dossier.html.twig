{% extends 'base.html.twig' %}

{% block title %}Ajouter un Dossier{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h1 class="mb-0">
                    <i class="fas fa-plus me-2"></i>
                    Ajouter un Dossier
                </h1>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.employe, 'Employ√©', {'class': 'form-label'}) }}
                            {{ form_widget(form.employe, {'class': 'form-select'}) }}
                            {{ form_errors(form.employe) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.status, 'Statut du Dossier', {'class': 'form-label'}) }}
                            {{ form_widget(form.status, {'class': 'form-select'}) }}
                            {{ form_errors(form.status) }}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="mb-3">
                            {{ form_label(form.nom, 'Nom du Dossier', {'class': 'form-label'}) }}
                            {{ form_widget(form.nom, {'class': 'form-control'}) }}
                            {{ form_errors(form.nom) }}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.placard, 'Placard', {'class': 'form-label'}) }}
                            {{ form_widget(form.placard, {'class': 'form-select', 'id': 'placard-select'}) }}
                            {{ form_errors(form.placard) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3" id="emplacement-container" style="display: none;">
                            {{ form_label(form.emplacement, 'Emplacement dans le placard', {'class': 'form-label'}) }}
                            {{ form_widget(form.emplacement, {'class': 'form-control', 'id': 'emplacement-input'}) }}
                            {{ form_errors(form.emplacement) }}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="mb-3">
                            {{ form_label(form.description, 'Description', {'class': 'form-label'}) }}
                            {{ form_widget(form.description, {'class': 'form-control', 'rows': 4}) }}
                            {{ form_errors(form.description) }}
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-between">
                    <a href="{{ path('responsable_manage_dossiers') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Retour
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save me-2"></i>Enregistrer
                    </button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const placardSelect = document.getElementById('placard-select');
    const emplacementContainer = document.getElementById('emplacement-container');
    const emplacementInput = document.getElementById('emplacement-input');

    function toggleEmplacementField() {
        if (placardSelect.value && placardSelect.value !== '') {
            emplacementContainer.style.display = 'block';
            emplacementInput.setAttribute('required', 'required');
            emplacementInput.focus();
        } else {
            emplacementContainer.style.display = 'none';
            emplacementInput.removeAttribute('required');
            emplacementInput.value = '';
        }
    }

    // Initial check
    toggleEmplacementField();

    // Listen for changes
    placardSelect.addEventListener('change', toggleEmplacementField);
});
</script>
{% endblock %}
