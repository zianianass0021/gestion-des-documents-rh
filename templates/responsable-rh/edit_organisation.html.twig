{% extends 'base.html.twig' %}

{% block title %}Modifier Organisation - {{ organisation.dossierDesignation }}{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800">
                <i class="fas fa-edit me-2"></i>
                Modifier Organisation
            </h1>
            <p class="text-muted mb-0">{{ organisation.dossierDesignation }}</p>
        </div>
        <div>
            <a href="{{ path('responsable_view_organisation', {'id': organisation.id}) }}" class="btn btn-info me-2">
                <i class="fas fa-eye me-2"></i>Voir
            </a>
            <a href="{{ path('responsable_manage_organisations') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i>Retour
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-sitemap me-2"></i>
                        Modifier les Informations
                    </h6>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.code, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.code, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.code) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.das, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.das, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.das) }}
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.divisionActivitesStrategiques, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.divisionActivitesStrategiques, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.divisionActivitesStrategiques) }}
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.groupement, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.groupement, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.groupement) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.dossier, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.dossier, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.dossier) }}
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.dossierDesignation, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.dossierDesignation, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.dossierDesignation) }}
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="{{ path('responsable_view_organisation', {'id': organisation.id}) }}" class="btn btn-secondary">
                            <i class="fas fa-times me-2"></i>Annuler
                        </a>
                        <button type="submit" class="btn btn-warning">
                            <i class="fas fa-save me-2"></i>Mettre à jour
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-chart-bar me-2"></i>
                        Statistiques
                    </h6>
                </div>
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-user-tie fa-3x text-primary mb-2"></i>
                        <h4 class="text-primary">{{ organisation.organisationEmployeeContrats|length }}</h4>
                        <p class="text-muted">Employé{{ organisation.organisationEmployeeContrats|length > 1 ? 's' : '' }} assigné{{ organisation.organisationEmployeeContrats|length > 1 ? 's' : '' }}</p>
                    </div>
                </div>
            </div>

            <div class="card shadow mt-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-info-circle me-2"></i>
                        Aide
                    </h6>
                </div>
                <div class="card-body">
                    <h6>Structure Organisationnelle</h6>
                    <p class="text-muted small">
                        L'organisation suit une hiérarchie :<br>
                        <strong>DAS</strong> → <strong>Groupement</strong> → <strong>Dossier</strong>
                    </p>
                    
                    <div class="alert alert-warning mt-3">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Attention :</strong> Modifier ces informations peut affecter les employés assignés.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
