{% extends 'base.html.twig' %}

{% block title %}Modifier le Placard{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-edit me-2"></i>Modifier le Placard
                    </h5>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_label(form.name) }}
                            {{ form_widget(form.name) }}
                            {{ form_errors(form.name) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.location) }}
                            {{ form_widget(form.location) }}
                            {{ form_errors(form.location) }}
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="{{ path('responsable_manage_placards') }}" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Retour
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save me-2"></i>Enregistrer
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>

            <div class="card mt-4">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>Informations sur ce placard
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <strong>Date de création :</strong><br>
                            {{ placard.createdAt|date('d/m/Y à H:i') }}
                        </div>
                        <div class="col-md-6">
                            <strong>Nombre de dossiers :</strong><br>
                            <span class="badge bg-primary">{{ placard.dossiers|length }}</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
