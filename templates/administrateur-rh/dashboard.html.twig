{% extends 'base.html.twig' %}

{% block title %}Dashboard Administrateur RH{% endblock %}

{% block body %}
<div class="container-fluid dashboard-admin">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="dashboard-header">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h1 class="dashboard-title">
                            <i class="fas fa-tachometer-alt me-3"></i>
                            Dashboard Administrateur RH
                        </h1>
                        <p class="dashboard-subtitle text-muted mb-0">
                            Vue d'ensemble de la gestion des responsables RH
                        </p>
                    </div>
                    <div class="dashboard-stats-badge">
                        <span class="badge bg-primary fs-6 px-3 py-2">
                            <i class="fas fa-users me-2"></i>
                            {{ totalResponsables }} Responsable{{ totalResponsables > 1 ? 's' : '' }} RH
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- KPIs Section -->
    <div class="row mb-5">
        <div class="col-12">
            <h2 class="section-title mb-4">
                <i class="fas fa-chart-bar me-2"></i>
                Indicateurs Clés
            </h2>
        </div>
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card kpi-card h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="kpi-icon-wrapper bg-primary">
                        <i class="fas fa-user-tie"></i>
                    </div>
                    <div class="kpi-content">
                        <h3 class="kpi-number">{{ totalResponsables }}</h3>
                        <p class="kpi-label">Total Responsables RH</p>
                        <small class="kpi-trend {% if responsablesActifs == totalResponsables %}text-success{% else %}text-warning{% endif %}">
                            <i class="fas fa-{% if responsablesActifs == totalResponsables %}check-circle{% else %}exclamation-triangle{% endif %} me-1"></i>
                            {% if responsablesActifs == totalResponsables %}
                                Tous actifs
                            {% else %}
                                {{ responsablesActifs }}/{{ totalResponsables }} actifs
                            {% endif %}
                        </small>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card kpi-card h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="kpi-icon-wrapper bg-info">
                        <i class="fas fa-user-plus"></i>
                    </div>
                    <div class="kpi-content">
                        <h3 class="kpi-number">{{ nouveauxCeMois }}</h3>
                        <p class="kpi-label">Nouveaux ce mois</p>
                        <small class="kpi-trend text-info">
                            <i class="fas fa-calendar-alt me-1"></i>
                            {% if nouveauxCeMois > 0 %}
                                Ce mois-ci
                            {% else %}
                                Aucun nouveau
                            {% endif %}
                        </small>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card kpi-card h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="kpi-icon-wrapper bg-warning">
                        <i class="fas fa-chart-line"></i>
                    </div>
                    <div class="kpi-content">
                        <h3 class="kpi-number">{{ actionsRecentes }}</h3>
                        <p class="kpi-label">Actions récentes</p>
                        <small class="kpi-trend text-warning">
                            <i class="fas fa-clock me-1"></i>
                            {% if actionsRecentes > 0 %}
                                Cette semaine
                            {% else %}
                                Aucune action
                            {% endif %}
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="card border-0 shadow-lg">
                <div class="card-header dark-header">
                    <h2 class="section-title mb-0">
                        <i class="fas fa-bolt me-2"></i>
                        Actions Rapides
                    </h2>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-4 col-md-6 mb-3">
                            <div class="action-card">
                                <a href="{{ path('admin_add_responsable') }}" class="action-link">
                                    <div class="action-icon bg-primary">
                                        <i class="fas fa-user-plus"></i>
                                    </div>
                                    <div class="action-content">
                                        <h5>Ajouter</h5>
                                        <p>Nouveau Responsable RH</p>
                                    </div>
                                </a>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-6 mb-3">
                            <div class="action-card">
                                <a href="{{ path('admin_manage_responsables') }}" class="action-link">
                                    <div class="action-icon bg-info">
                                        <i class="fas fa-users"></i>
                                    </div>
                                    <div class="action-content">
                                        <h5>Gérer</h5>
                                        <p>Responsables RH</p>
                                    </div>
                                </a>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-6 mb-3">
                            <div class="action-card">
                                <a href="{{ path('admin_manage_responsables') }}" class="action-link">
                                    <div class="action-icon bg-success">
                                        <i class="fas fa-chart-bar"></i>
                                    </div>
                                    <div class="action-content">
                                        <h5>Statistiques</h5>
                                        <p>Vue détaillée</p>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Responsables RH récents -->
    <div class="row">
        <div class="col-12">
            <h2 class="section-title mb-4">
                <i class="fas fa-user-tie me-2"></i>
                Responsables RH Récents
            </h2>
            {% if responsablesRecents is empty %}
                <div class="empty-state">
                    <div class="empty-state-icon">
                        <i class="fas fa-user-tie"></i>
                    </div>
                    <h3>Aucun responsable RH</h3>
                    <p class="text-muted">Commencez par ajouter votre premier responsable RH pour gérer les employés et les dossiers</p>
                    <a href="{{ path('admin_add_responsable') }}" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>
                        Ajouter un Responsable RH
                    </a>
                </div>
            {% else %}
                <div class="card modern-table-card">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-header">
                                    <tr>
                                        <th class="border-0">
                                            <i class="fas fa-user me-2"></i>
                                            Responsable
                                        </th>
                                        <th class="border-0">
                                            <i class="fas fa-envelope me-2"></i>
                                            Contact
                                        </th>
                                        <th class="border-0">
                                            <i class="fas fa-phone me-2"></i>
                                            Téléphone
                                        </th>
                                        <th class="border-0">
                                            <i class="fas fa-check-circle me-2"></i>
                                            Statut
                                        </th>
                                        <th class="border-0 text-center">
                                            <i class="fas fa-cog me-2"></i>
                                            Actions
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for responsable in responsablesRecents %}
                                    <tr class="table-row">
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="user-avatar">
                                                    <span class="avatar-text">{{ responsable.prenom|first|upper }}{{ responsable.nom|first|upper }}</span>
                                                </div>
                                                <div class="user-info">
                                                    <h6 class="user-name mb-0">{{ responsable.prenom }} {{ responsable.nom }}</h6>
                                                    <small class="text-muted">Responsable RH</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="contact-info">
                                                <span class="email">{{ responsable.email }}</span>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="phone-number">
                                                {{ responsable.telephone|default('Non renseigné') }}
                                            </span>
                                        </td>
                                        <td>
                                            <span class="status-badge status-active">
                                                <i class="fas fa-check-circle me-1"></i>
                                                Actif
                                            </span>
                                        </td>
                                        <td class="text-center">
                                            <div class="action-buttons">
                                                <a href="{{ path('admin_edit_responsable', {'id': responsable.id}) }}" 
                                                   class="btn btn-sm btn-outline-primary me-1" 
                                                   title="Modifier">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a href="{{ path('admin_delete_responsable', {'id': responsable.id}) }}"
                                                   class="btn btn-sm btn-outline-danger" 
                                                   title="Supprimer"
                                                   onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce responsable RH ?')">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>

<style>
/* Dashboard Admin Styles */
.dashboard-admin {
    padding: 2rem 0;
}

/* Header Styles */
.dashboard-header {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-radius: 15px;
    padding: 2rem;
    color: white;
    margin-bottom: 2rem;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
}

.dashboard-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin: 0;
    display: flex;
    align-items: center;
}

.dashboard-subtitle {
    font-size: 1.1rem;
    opacity: 0.9;
    margin-top: 0.5rem;
}

.dashboard-stats-badge {
    background: rgba(255, 255, 255, 0.2);
    border-radius: 10px;
    padding: 0.5rem 1rem;
    backdrop-filter: blur(10px);
}

/* Section Titles */
.section-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: #495057;
    border-bottom: 3px solid #007bff;
    padding-bottom: 0.5rem;
    display: inline-block;
}

/* KPI Cards */
.kpi-card {
    border: none;
    border-radius: 15px;
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
    overflow: hidden;
}

.kpi-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
}

.kpi-icon-wrapper {
    width: 60px;
    height: 60px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 1rem;
    flex-shrink: 0;
}

.kpi-icon-wrapper i {
    font-size: 1.5rem;
    color: white;
}

.kpi-content {
    flex: 1;
}

.kpi-number {
    font-size: 2.5rem;
    font-weight: 700;
    margin: 0;
    color: #495057;
}

.kpi-label {
    font-size: 0.9rem;
    color: #6c757d;
    margin: 0.25rem 0;
    font-weight: 500;
}

.kpi-trend {
    font-size: 0.8rem;
    font-weight: 500;
}

/* Action Cards */
.action-card {
    background: white;
    border-radius: 15px;
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
    overflow: hidden;
    height: 100%;
}

.action-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
}

.action-link {
    display: flex;
    align-items: center;
    padding: 1.5rem;
    text-decoration: none;
    color: inherit;
    height: 100%;
}

.action-icon {
    width: 50px;
    height: 50px;
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 1rem;
    flex-shrink: 0;
}

.action-icon i {
    font-size: 1.2rem;
    color: white;
}

.action-content h5 {
    font-size: 1.1rem;
    font-weight: 600;
    margin: 0 0 0.25rem 0;
    color: #495057;
}

.action-content p {
    font-size: 0.9rem;
    color: #6c757d;
    margin: 0;
}

/* Table Styles */
.modern-table-card {
    border: none;
    border-radius: 15px;
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
    overflow: hidden;
}

.table-header {
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
}

.table-header th {
    font-weight: 600;
    color: #495057;
    padding: 1rem;
    border: none;
}

.table-row {
    transition: all 0.2s ease;
}

.table-row:hover {
    background-color: #f8f9fa;
    transform: scale(1.01);
}

.user-avatar {
    width: 45px;
    height: 45px;
    border-radius: 50%;
    background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 1rem;
    flex-shrink: 0;
}

.avatar-text {
    color: white;
    font-weight: 600;
    font-size: 0.9rem;
}

.user-name {
    font-weight: 600;
    color: #495057;
}

.contact-info .email {
    color: #007bff;
    font-weight: 500;
}

.phone-number {
    color: #6c757d;
}

.status-badge {
    padding: 0.4rem 0.8rem;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 500;
    display: inline-flex;
    align-items: center;
}

.status-active {
    background-color: #d4edda;
    color: #155724;
}

.action-buttons .btn {
    border-radius: 8px;
    padding: 0.4rem 0.8rem;
    transition: all 0.2s ease;
}

.action-buttons .btn:hover {
    transform: scale(1.1);
}

/* Empty State */
.empty-state {
    text-align: center;
    padding: 4rem 2rem;
    background: white;
    border-radius: 15px;
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
}

.empty-state-icon {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    background: linear-gradient(135deg, #e9ecef 0%, #dee2e6 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem;
}

.empty-state-icon i {
    font-size: 2rem;
    color: #6c757d;
}

.empty-state h3 {
    color: #495057;
    margin-bottom: 0.5rem;
}

/* Dark Theme */
[data-bs-theme="dark"] .dashboard-header {
    background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
}

[data-bs-theme="dark"] .section-title {
    color: #e9ecef;
    border-bottom-color: #80bdff;
}

[data-bs-theme="dark"] .kpi-card,
[data-bs-theme="dark"] .action-card,
[data-bs-theme="dark"] .modern-table-card,
[data-bs-theme="dark"] .empty-state {
    background: rgba(33, 37, 41, 0.95);
    border: 1px solid rgba(255, 255, 255, 0.1);
}

[data-bs-theme="dark"] .kpi-number,
[data-bs-theme="dark"] .user-name,
[data-bs-theme="dark"] .empty-state h3 {
    color: #e9ecef;
}

[data-bs-theme="dark"] .kpi-label,
[data-bs-theme="dark"] .action-content p,
[data-bs-theme="dark"] .phone-number {
    color: #adb5bd;
}

[data-bs-theme="dark"] .table-header {
    background: linear-gradient(135deg, #495057 0%, #6c757d 100%);
}

[data-bs-theme="dark"] .table-header th {
    color: #e9ecef;
}

[data-bs-theme="dark"] .table-row:hover {
    background-color: rgba(255, 255, 255, 0.05);
}

[data-bs-theme="dark"] .contact-info .email {
    color: #80bdff;
}

[data-bs-theme="dark"] .status-active {
    background-color: rgba(40, 167, 69, 0.2);
    color: #28a745;
}

[data-bs-theme="dark"] .empty-state-icon {
    background: linear-gradient(135deg, #495057 0%, #6c757d 100%);
}

[data-bs-theme="dark"] .empty-state-icon i {
    color: #adb5bd;
}

/* Dark Mode Styles for Action Cards */
[data-bs-theme="dark"] .action-card {
    background: var(--bg-primary) !important;
    border: 1px solid var(--border-color) !important;
}

[data-bs-theme="dark"] .action-link {
    color: var(--text-primary) !important;
}

[data-bs-theme="dark"] .action-link:hover {
    color: var(--text-primary) !important;
}

[data-bs-theme="dark"] .action-content h5 {
    color: var(--text-primary) !important;
}

[data-bs-theme="dark"] .action-content p {
    color: var(--text-secondary) !important;
}

[data-bs-theme="dark"] .section-title {
    color: var(--text-primary) !important;
}

/* Dark Header Styles for Actions Rapides */
.dark-header {
    background: #0f172a !important;
    border-bottom: 1px solid #334155 !important;
    color: #f8fafc !important;
}

.dark-header h2 {
    color: #f8fafc !important;
}

.dark-header i {
    color: #f8fafc !important;
}

/* Dark mode specific styles */
[data-bs-theme="dark"] .dark-header {
    background: #0f172a !important;
    border-bottom: 1px solid #334155 !important;
    color: #f8fafc !important;
}

[data-bs-theme="dark"] .dark-header h2 {
    color: #f8fafc !important;
}

[data-bs-theme="dark"] .dark-header i {
    color: #f8fafc !important;
}

/* Light mode - keep normal appearance */
[data-bs-theme="light"] .dark-header {
    background: #f8fafc !important;
    border-bottom: 1px solid #e2e8f0 !important;
    color: #1e293b !important;
}

[data-bs-theme="light"] .dark-header h2 {
    color: #1e293b !important;
}

[data-bs-theme="light"] .dark-header i {
    color: #1e293b !important;
}

/* ===== MOBILE RESPONSIVE STYLES ===== */
@media (max-width: 767px) {
    .dashboard-title {
        font-size: 1.25rem !important;
    }
    
    .dashboard-subtitle {
        font-size: 0.85rem !important;
    }
    
    .dashboard-header .d-flex {
        flex-direction: column;
        gap: 1rem;
    }
    
    .dashboard-stats-badge {
        width: 100%;
        text-align: center;
    }
    
    .section-title {
        font-size: 1.1rem !important;
    }
    
    .kpi-card .card-body {
        flex-direction: column;
        text-align: center;
        padding: 1rem !important;
    }
    
    .kpi-icon-wrapper {
        margin-bottom: 1rem;
    }
    
    .kpi-number {
        font-size: 1.75rem !important;
    }
    
    .kpi-label {
        font-size: 0.9rem !important;
    }
    
    .table {
        font-size: 0.85rem;
    }
    
    .table th,
    .table td {
        padding: 0.5rem !important;
    }
    
    .badge {
        font-size: 0.75rem !important;
    }
    
    .btn {
        font-size: 0.85rem !important;
        padding: 0.4rem 0.8rem !important;
    }
    
    .btn-sm {
        font-size: 0.75rem !important;
        padding: 0.3rem 0.6rem !important;
    }
}
</style>
{% endblock %}