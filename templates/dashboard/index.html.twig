            const barChartContainer = document.querySelector('#reportModal .modal-body .row > .col-12');
            if (barChartContainer && barChartContainer.classList.contains('col-12') && !barChartContainer.classList.contains('col-lg-6')) {
                barChartContainer.className = 'col-12 col-lg-6';
            }
            // Reset chart height
            const chartContainer = document.querySelector('#reportModal .modal-body .row > .col-lg-6:last-child .chart-container');
            if (chartContainer) {
                chartContainer.style.height = '';
            }
            // Show first chart
            const firstChart = document.querySelector('#reportModal .modal-body .row > .col-lg-6:first-child');
            if (firstChart) {
                firstChart.style.display = 'block';
            }
            createPieChart(report.data);
            createBarChart(report.data);
        }
        
        // Create table
        createReportTable(report.data);
    };
    
