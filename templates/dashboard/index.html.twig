            if (firstChart) {
                firstChart.style.display = 'none';
            }
            
            // Make the bar chart container full width and taller
            const barChartContainer = document.querySelector('#reportModal .modal-body .row > .col-lg-6:last-child');
            if (barChartContainer) {
                barChartContainer.className = 'col-12';
