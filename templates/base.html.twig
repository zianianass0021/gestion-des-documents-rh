    <!-- Custom CSS -->
        {% block stylesheets %}
        <style>
            /* ===== PAGINATION STYLES ===== */
            .pagination {
                margin-bottom: 0;
            }
            
            .pagination .page-link {
                color: var(--primary-600);
                border-color: var(--primary-200);
                padding: 0.5rem 0.75rem;
                font-size: 0.875rem;
                transition: all 0.2s ease;
            }
            
            .pagination .page-link:hover {
                color: var(--primary-700);
                background-color: var(--primary-50);
                border-color: var(--primary-300);
            }
            
            .pagination .page-item.active .page-link {
                background-color: var(--primary-600);
                border-color: var(--primary-600);
                color: white;
            }
            
            .pagination .page-item.disabled .page-link {
                color: var(--secondary-400);
                background-color: var(--secondary-50);
                border-color: var(--secondary-200);
            }
            
            .pagination-info {
                font-size: 0.875rem;
            }
            
            @media (max-width: 768px) {
                .pagination .page-link {
                    padding: 0.375rem 0.5rem;
                    font-size: 0.8rem;
                }
                
                .pagination-info {
                    font-size: 0.75rem;
                }
            }
            /* ===== LIGHT MODE ONLY SYSTEM ===== */
            
            /* Light Theme Colors */
            :root {
                /* Primary Colors */
                --primary-50: #f0f9ff;
                --primary-100: #e0f2fe;
                --primary-200: #bae6fd;
                --primary-300: #7dd3fc;
                --primary-400: #38bdf8;
                --primary-500: #0ea5e9;
                --primary-600: #0284c7;
                --primary-700: #0369a1;
                --primary-800: #075985;
                --primary-900: #0c4a6e;
                
                /* Secondary Colors */
                --secondary-50: #f8fafc;
                --secondary-100: #f1f5f9;
                --secondary-200: #e2e8f0;
                --secondary-300: #cbd5e1;
                --secondary-400: #94a3b8;
                --secondary-500: #64748b;
                --secondary-600: #475569;
                --secondary-700: #334155;
                --secondary-800: #1e293b;
                --secondary-900: #0f172a;
                
                /* Light Theme Colors */
                --bg-primary: #ffffff;
                --bg-secondary: #f8fafc;
                --bg-tertiary: #e2e8f0;
                --text-primary: #1e293b;
                --text-secondary: #64748b;
                --text-muted: #94a3b8;
                --border-color: #e2e8f0;
                --shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
                --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
                --radius: 0.5rem;
                --radius-lg: 0.75rem;
                --transition: all 0.3s ease;
            }
            
            /* Global Styles */
            * {
                box-sizing: border-box;
            }
            
            html, body {
                margin: 0;
                padding: 0;
                overflow-x: hidden;
                width: 100%;
                max-width: 100vw;
            }
            
            body {
                font-family: 'Inter', sans-serif;
                background-color: var(--bg-secondary);
                color: var(--text-primary);
            }
            
            .container-fluid {
                padding-left: 0.75rem;
                padding-right: 0.75rem;
                max-width: 100%;
                overflow-x: hidden;
            }
            
            /* App Layout */
            .app-wrapper {
                display: flex;
                min-height: 100vh;
                width: 100%;
                max-width: 100vw;
                overflow-x: hidden;
            }
            
            .main-content {
                flex: 1;
                display: flex;
                flex-direction: column;
                margin-left: 180px;
                transition: margin-left 0.3s ease;
                width: 100%;
                max-width: 100%;
                overflow-x: hidden;
            }
            
            .main-content.expanded {
                margin-left: 0;
        }
        
            .main-area {
                flex: 1;
                padding: 1rem 0;
                width: 100%;
                max-width: 100%;
                overflow-x: hidden;
            }
            
            /* Card Styles */
            .card {
                background-color: var(--bg-primary);
                border-color: var(--border-color);
                color: var(--text-primary);
                max-width: 100%;
                overflow-x: hidden;
            }
            
            .row {
                margin-left: 0;
                margin-right: 0;
                max-width: 100%;
            }
            
            .row > * {
                padding-left: calc(var(--bs-gutter-x) * 0.5);
                padding-right: calc(var(--bs-gutter-x) * 0.5);
            }
            
            .card-header {
                background-color: var(--bg-tertiary);
                border-bottom-color: var(--border-color);
                color: var(--text-primary);
            }

            .card-body {
                color: var(--text-primary);
            }
            
            .card-title {
            color: var(--text-primary);
            }
            
            .card-text {
            color: var(--text-secondary);
            }
            
            /* Table Styles */
            .table {
                color: var(--text-primary);
                width: 100%;
                max-width: 100%;
            }
            
            .table-responsive {
                width: 100%;
                max-width: 100%;
                overflow-x: auto;
                -webkit-overflow-scrolling: touch;
            }
        
        .table thead th {
                background-color: var(--bg-tertiary);
                border-color: var(--border-color);
                color: var(--text-primary);
            }
            
            .table tbody tr {
                background-color: var(--bg-primary);
                border-color: var(--border-color);
            color: var(--text-primary);
        }
        
        .table tbody tr:hover {
                background-color: var(--bg-tertiary);
            }
            
            .table td {
                border-color: var(--border-color);
                color: var(--text-primary);
            }
            
            /* Form Styles */
            .form-control,
            .form-select {
                background-color: var(--bg-primary);
            border-color: var(--border-color);
            color: var(--text-primary);
        }
        
            .form-control::placeholder {
                color: var(--text-muted);
            }
            
            /* Button Styles */
            .btn-outline-primary,
            .btn-outline-secondary,
            .btn-outline-info,
            .btn-outline-success,
            .btn-outline-warning,
            .btn-outline-danger {
            color: var(--text-primary);
            border-color: var(--border-color);
            }
            
            .btn-outline-primary:hover,
            .btn-outline-secondary:hover,
            .btn-outline-info:hover,
            .btn-outline-success:hover,
            .btn-outline-warning:hover,
            .btn-outline-danger:hover {
                background-color: var(--bg-tertiary);
            color: var(--text-primary);
            }
            
            /* User Dropdown Styles */
            .user-dropdown {
                position: relative;
                display: inline-block;
            }
            
            .user-dropdown-menu {
                position: absolute;
                top: calc(100% + 5px);
                right: 0;
                background-color: var(--bg-primary);
                border: 1px solid var(--border-color);
                border-radius: var(--radius);
                box-shadow: var(--shadow-lg);
                min-width: 200px;
                z-index: 9999;
                display: none;
                margin-top: 0;
            }
            
            .user-dropdown-menu.show {
                display: block;
            }
            
            .user-dropdown-item {
                display: block;
                padding: 0.75rem 1rem;
                color: var(--text-primary);
                text-decoration: none;
                transition: var(--transition);
                border-radius: var(--radius);
                margin: 0.25rem;
            }
            
            .user-dropdown-item:hover {
                background-color: var(--bg-tertiary);
                color: var(--text-primary);
                text-decoration: none;
            }
            
            .user-dropdown-item i {
                width: 20px;
                text-align: center;
            }
            
            /* Ensure dropdown is always visible */
            .navbar-area .d-flex {
                overflow: visible;
            }
            
            .navbar-area .d-flex > div {
                overflow: visible;
            }

                /* Sidebar Styles */
        .sidebar {
                    position: fixed;
                    top: 0;
                    left: 0;
                    width: 180px;
                    height: 100vh;
                    background: var(--primary-900);
                    z-index: 1000;
                    transition: transform 0.3s ease;
        }

            .sidebar.collapsed {
                transform: translateX(-180px);
            }
            
            .sidebar-header {
                background: var(--primary-800);
                border-bottom: 1px solid var(--primary-700);
                padding: 0.75rem;
            }
            
            .sidebar-brand {
            color: white;
                font-size: 1rem;
                font-weight: 600;
            }
            
            .sidebar-menu {
                padding: 0.5rem 0;
            }
            
            .sidebar-menu a {
                color: rgba(255, 255, 255, 0.9);
                text-decoration: none;
            transition: all 0.3s ease;
        }

            .sidebar-menu a:hover {
                background: rgba(255, 255, 255, 0.1);
                color: white;
            }
            
            .sidebar-menu a.active {
                background: rgba(255, 255, 255, 0.2);
                border-right: 4px solid #ffffff;
                color: white;
                font-weight: 600;
            }
            
            .sidebar-menu a.active i {
                color: #ffffff;
            }
            
            /* Navbar Styles */
            .navbar-area {
                background-color: var(--bg-primary);
                border-bottom: 1px solid var(--border-color);
                padding: 0.5rem 0;
                box-shadow: var(--shadow);
                overflow: visible;
                position: relative;
            }
            
            .nav-toggle-btn {
                background: none;
                border: none;
                color: var(--text-secondary);
                font-size: 1.2rem;
                cursor: pointer;
                transition: color 0.3s ease;
            }
            
            .nav-toggle-btn:hover {
                color: var(--text-primary);
            }
            
            .nav-title {
                color: var(--text-primary);
                font-size: 1.2rem;
                font-weight: 600;
            }
            
            .nav-user-btn {
                background-color: var(--bg-tertiary);
                border: 1px solid var(--border-color);
                color: var(--text-primary);
                padding: 0.5rem 1rem;
                border-radius: var(--radius);
            transition: all 0.3s ease;
        }

            .nav-user-btn:hover {
                background-color: var(--bg-secondary);
                color: var(--text-primary);
            }
            
            /* ===== RESPONSIVE MEDIA QUERIES ===== */
            
            /* Large Desktop (1400px and up) */
            @media (min-width: 1400px) {
                .container-fluid {
                    max-width: 1320px;
                    margin: 0 auto;
                }
            }
            
            /* Desktop (992px to 1399px) */
            @media (min-width: 992px) and (max-width: 1399px) {
                .sidebar {
                    width: 180px;
                }
                
                .main-content {
                    margin-left: 180px;
                }
                
                .container-fluid {
                    padding-left: 1rem;
                    padding-right: 1rem;
                }
            }
            
            /* Tablet (768px to 991px) */
            @media (max-width: 991px) {
                .sidebar {
                    width: 200px;
                    transform: translateX(-200px);
                    box-shadow: 2px 0 10px rgba(0, 0, 0, 0.1);
                }
                
                .sidebar.show {
                    transform: translateX(0);
                }
                
                .main-content {
                    margin-left: 0 !important;
                    width: 100%;
                }
                
                .navbar-area {
                    padding: 0.75rem 0;
                }
                
                .nav-title {
                    font-size: 1rem;
                }
                
                .container-fluid {
                    padding-left: 0.75rem;
                    padding-right: 0.75rem;
                }
                
                /* Make tables scrollable on tablet */
                .table-responsive {
                    overflow-x: auto;
