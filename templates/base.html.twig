            /* Small Mobile (up to 575px) */
            @media (max-width: 575px) {
                .sidebar {
                    width: 280px;
                    transform: translateX(-280px);
                }
                
                .sidebar.show {
                    transform: translateX(0);
                }
                
                .sidebar-menu a {
                    padding: 0.75rem 1rem !important;
                    font-size: 0.9rem;
                }
                
                .main-area {
                    padding: 0.5rem 0;
                }
                
                .container-fluid {
                    padding-left: 0.25rem !important;
                    padding-right: 0.25rem !important;
