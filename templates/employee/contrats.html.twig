{% extends 'base.html.twig' %}

{% block title %}Mes Contrats - Système RH{% endblock %}
{% block description %}Consultez vos contrats de travail et informations contractuelles.{% endblock %}

{% block page_title %}Mes Contrats{% endblock %}

{% block body %}
<!-- Page Header -->
<div class="page-header-card card border-0 shadow-lg mb-4">
    <div class="card-body">
        <div class="d-flex align-items-center justify-content-between flex-wrap">
            <div class="flex-grow-1">
                <h2 class="mb-3">
                    <i class="fas fa-file-contract me-2 text-primary"></i>
                    Mes Contrats
                </h2>
                <p class="lead text-muted mb-0">
                    Consultez tous vos contrats de travail et informations contractuelles
                </p>
            </div>
            <div class="contract-count">
                <div class="count-display h3 mb-0 text-primary">{{ contrats.getTotalItemCount }}</div>
                <small class="text-muted">Contrat{{ contrats.getTotalItemCount > 1 ? 's' : '' }}</small>
            </div>
        </div>
    </div>
</div>

<!-- Contracts Card -->
<div class="card border-0 shadow-lg">
    <div class="card-header">
        <div class="d-flex align-items-center justify-content-between">
            <h5 class="mb-0">
                <i class="fas fa-list me-2"></i>
                Liste des Contrats
            </h5>
            <div class="contract-filters">
                <button class="btn btn-outline-primary btn-sm" type="button" data-bs-toggle="dropdown">
                    <i class="fas fa-filter me-1"></i>
                    Filtrer
                </button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="#" data-filter="all">Tous les contrats</a></li>
                    <li><a class="dropdown-item" href="#" data-filter="actif">Contrats actifs</a></li>
                    <li><a class="dropdown-item" href="#" data-filter="terminé">Contrats terminés</a></li>
                    <li><a class="dropdown-item" href="#" data-filter="en_attente">En attente</a></li>
                </ul>
            </div>
        </div>
    </div>

                <div class="card-body p-0">
                    {% if contrats.getTotalItemCount == 0 %}
                        <!-- Empty State -->
                        <div class="empty-state text-center py-5">
                            <div class="empty-icon mb-4">
                                <i class="fas fa-file-contract fa-4x text-muted"></i>
                            </div>
                            <h4 class="text-muted mb-3">Aucun contrat trouvé</h4>
                            <p class="text-muted mb-4">
                                Vous n'avez pas encore de contrats associés à votre compte.
                            </p>
                            <a href="{{ path('employee_dashboard') }}" class="btn btn-primary">
                                <i class="fas fa-arrow-left me-2"></i>
                                Retour au Dashboard
                            </a>
                    </div>
                {% else %}
                        <!-- Contracts Table -->
                    <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="bg-light">
                                    <tr>
                                        <th class="border-0 py-3 px-4">
                                            <i class="fas fa-file-alt me-2 text-primary"></i>
                                            Type de Contrat
                                        </th>
                                        <th class="border-0 py-3 px-4">
                                            <i class="fas fa-calendar-start me-2 text-primary"></i>
                                            Date de Début
                                        </th>
                                        <th class="border-0 py-3 px-4">
                                            <i class="fas fa-calendar-end me-2 text-primary"></i>
                                            Date de Fin
                                        </th>
                                        <th class="border-0 py-3 px-4">
                                            <i class="fas fa-info-circle me-2 text-primary"></i>
                                            Statut
                                        </th>
                                        <th class="border-0 py-3 px-4">
                                            <i class="fas fa-cogs me-2 text-primary"></i>
                                            Actions
                                        </th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for contrat in contrats %}
                                    <tr class="contract-row" data-status="{{ contrat.statut }}">
                                        <td class="py-4 px-4">
                                            <div class="contract-type">
                                                <div class="contract-icon">
                                                    <i class="fas fa-file-contract text-primary"></i>
                                                </div>
                                                <div class="contract-info">
                                                    <h6 class="mb-1 fw-semibold">
                                                        {{ contrat.natureContrat.designation }}
                                                    </h6>
                                                    <small class="text-muted">
                                                        {{ contrat.natureContrat.description ?? 'Contrat standard' }}
                                                    </small>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="py-4 px-4">
                                            <div class="date-info">
                                                <span class="date-value">
                                                    {{ contrat.dateDebut|date('d/m/Y') }}
                                                </span>
                                                <small class="text-muted d-block">
                                                    {{ contrat.dateDebut|date('l')|capitalize }}
                                                </small>
                                            </div>
                                        </td>
                                        <td class="py-4 px-4">
                                            <div class="date-info">
                                                {% if contrat.dateFin %}
                                                    <span class="date-value">
                                                        {{ contrat.dateFin|date('d/m/Y') }}
                                                    </span>
                                                    <small class="text-muted d-block">
                                                        {{ contrat.dateFin|date('l')|capitalize }}
                                                    </small>
                                                {% else %}
                                                    <span class="text-muted">Non définie</span>
                                                {% endif %}
                                            </div>
                                        </td>
                                        <td class="py-4 px-4">
                                            <span class="badge status-badge status-{{ contrat.statut }}">
                                                <i class="fas fa-circle me-1"></i>
                                                {{ contrat.statut|title }}
                                            </span>
                                        </td>
                                        <td class="py-4 px-4">
                                            <div class="action-buttons">
                                                <button class="btn btn-sm btn-outline-primary me-2" 
                                                        data-bs-toggle="modal" 
                                                        data-bs-target="#contractModal{{ contrat.id }}"
                                                        title="Voir les détails">
                                                    <i class="fas fa-eye"></i>
                                                </button>
                                                <button class="btn btn-sm btn-outline-info" 
                                                        title="Consulter le contrat"
                                                        disabled>
                                                    <i class="fas fa-eye"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>

                                    <!-- Contract Details Modal -->
                                    <div class="modal fade" id="contractModal{{ contrat.id }}" tabindex="-1">
                                        <div class="modal-dialog modal-lg">
                                            <div class="modal-content">
                                                <div class="modal-header bg-gradient-primary text-white">
                                                    <h5 class="modal-title">
                                                        <i class="fas fa-file-contract me-2"></i>
                                                        Détails du Contrat
                                                    </h5>
                                                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <h6 class="text-primary mb-3">Informations Générales</h6>
                                                            <table class="table table-sm">
                                                                <tr>
                                                                    <td class="fw-semibold">Type de contrat:</td>
                                    <td>{{ contrat.natureContrat.designation }}</td>
                                                                </tr>
                                                                <tr>
                                                                    <td class="fw-semibold">Date de début:</td>
                                    <td>{{ contrat.dateDebut|date('d/m/Y') }}</td>
                                                                </tr>
                                                                <tr>
                                                                    <td class="fw-semibold">Date de fin:</td>
                                    <td>{{ contrat.dateFin ? contrat.dateFin|date('d/m/Y') : 'Non définie' }}</td>
                                                                </tr>
                                                                <tr>
                                                                    <td class="fw-semibold">Statut:</td>
                                    <td>
                                                                        <span class="badge status-{{ contrat.statut }}">
                                            {{ contrat.statut|title }}
                                        </span>
                                    </td>
                                </tr>
                                                            </table>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <h6 class="text-primary mb-3">Description</h6>
                                                            <p class="text-muted">
                                                                {{ contrat.natureContrat.description ?? 'Aucune description disponible pour ce contrat.' }}
                                                            </p>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                                        Fermer
                                                    </button>
                                                    <button type="button" class="btn btn-info" disabled>
                                                        <i class="fas fa-eye me-2"></i>
                                                        Consultation uniquement
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    
                    <!-- Pagination -->
                    {% if contrats.getTotalItemCount > 10 %}
                    <div class="d-flex justify-content-center mt-4">
                        {{ knp_pagination_render(contrats) }}
                    </div>
                    {% endif %}
                {% endif %}
                </div>

                {% if contrats.getTotalItemCount > 0 %}
                <div class="card-footer bg-light">
                    <div class="d-flex align-items-center justify-content-between flex-wrap">
                        <small class="text-muted">
                            <i class="fas fa-info-circle me-1"></i>
                            Affichage de {{ contrats.getTotalItemCount }} contrat{{ contrats.getTotalItemCount > 1 ? 's' : '' }}
                        </small>
                        <a href="{{ path('employee_dashboard') }}" class="btn btn-outline-primary">
                            <i class="fas fa-arrow-left me-2"></i>
                            Retour au Dashboard
                        </a>
                    </div>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<!-- Custom Styles -->
<style>
    /* Fix layout issues */
    body {
        overflow-x: hidden;
    }
    
    .main-content {
        width: 100% !important;
        max-width: 100% !important;
    }
    
    .container-fluid {
        width: 100% !important;
        max-width: 100% !important;
        padding-left: 1rem !important;
        padding-right: 1rem !important;
    }
    
    .page-header-card {
        background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
        border-left: 4px solid #0284c7;
        color: #1e293b;
        width: 100%;
    }

    .page-header-card h2 {
        color: #1e293b !important;
    }

    .page-header-card .text-muted {
        color: #475569 !important;
    }

    .contract-count {
        background: rgba(255, 255, 255, 0.9);
        padding: 1rem;
        border-radius: var(--radius-lg);
        backdrop-filter: blur(10px);
        border: 1px solid #e2e8f0;
        min-width: 120px;
        text-align: center;
    }
    
    /* Ensure cards take full width */
    .card {
        width: 100% !important;
        max-width: 100% !important;
    }
    
    .table-responsive {
        width: 100% !important;
    }

    .count-display {
        font-weight: 800;
        color: #0284c7 !important;
    }

    .contract-count .text-muted {
        color: #64748b !important;
    }

    .contract-type {
        display: flex;
        align-items: center;
    }

    .contract-icon {
        width: 45px;
        height: 45px;
        background: var(--primary-50);
        border-radius: var(--radius-lg);
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 1rem;
    }

    .contract-info h6 {
        color: #1e293b;
        margin-bottom: 0.25rem;
    }

    .date-info {
        font-weight: 500;
        color: #64748b;
    }

    .date-value {
        color: #1e293b;
        font-size: 0.95rem;
    }

    .status-badge {
        padding: 0.5rem 0.75rem;
        border-radius: var(--radius-full);
        font-weight: 500;
        font-size: 0.8rem;
    }

    .status-actif {
        background: var(--success-100);
        color: var(--success-800);
        border: 1px solid var(--success-200);
    }

    .status-terminé {
        background: var(--error-100);
        color: var(--error-800);
        border: 1px solid var(--error-200);
    }

    .status-en_attente {
        background: var(--warning-100);
        color: var(--warning-800);
        border: 1px solid var(--warning-200);
    }

    .action-buttons {
        display: flex;
        gap: 0.5rem;
    }

    .btn-sm {
        padding: 0.5rem 0.75rem;
        border-radius: var(--radius-md);
        transition: var(--transition-normal);
    }

    .btn-sm:hover {
        transform: translateY(-2px);
    }

    .empty-state {
        padding: 4rem 2rem;
    }

    .empty-icon {
        opacity: 0.5;
    }

    .contract-row {
        transition: var(--transition-normal);
    }

    .contract-row:hover {
        background-color: var(--primary-50);
        transform: scale(1.01);
    }

    .breadcrumb {
        background: none;
        padding: 0;
        margin: 0;
    }

    .breadcrumb-item + .breadcrumb-item::before {
        color: rgba(255, 255, 255, 0.5);
    }

    .breadcrumb-light .breadcrumb-item a {
        color: rgba(255, 255, 255, 0.7);
        text-decoration: none;
        transition: var(--transition-normal);
    }

    .breadcrumb-light .breadcrumb-item a:hover {
        color: white;
    }

    .breadcrumb-light .breadcrumb-item.active {
        color: white;
    }

    /* Dark Theme Adjustments */
    [data-bs-theme="dark"] .card {
        background: rgba(30, 41, 59, 0.95);
        border: 1px solid var(--neutral-800);
    }

    [data-bs-theme="dark"] .contract-icon {
        background: var(--primary-900);
    }

    [data-bs-theme="dark"] .contract-info h6 {
        color: var(--neutral-200);
    }

    [data-bs-theme="dark"] .date-value {
        color: var(--neutral-200);
    }

    [data-bs-theme="dark"] .contract-row:hover {
        background-color: var(--primary-900);
    }

    [data-bs-theme="dark"] .table {
        background: rgba(30, 41, 59, 0.95);
        color: var(--neutral-200);
    }

    [data-bs-theme="dark"] .table thead th {
        background: var(--primary-900);
        color: white;
    }

    [data-bs-theme="dark"] .card-footer {
        background: var(--neutral-800) !important;
        border-top: 1px solid var(--neutral-700) !important;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        .page-header {
            padding: 2rem 0 !important;
        }

        .display-5 {
            font-size: 2rem;
        }

        .contract-type {
            flex-direction: column;
            align-items: flex-start;
        }

        .contract-icon {
            margin-right: 0;
            margin-bottom: 0.5rem;
        }

        .action-buttons {
            flex-direction: column;
            gap: 0.25rem;
        }

        .btn-sm {
            padding: 0.375rem 0.5rem;
            font-size: 0.8rem;
        }
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Contract filtering
        const filterButtons = document.querySelectorAll('[data-filter]');
        const contractRows = document.querySelectorAll('.contract-row');

        filterButtons.forEach(button => {
            button.addEventListener('click', function(e) {
                e.preventDefault();
                const filter = this.getAttribute('data-filter');
                
                contractRows.forEach(row => {
                    if (filter === 'all' || row.getAttribute('data-status') === filter) {
                        row.style.display = '';
                        row.style.animation = 'fadeInUp 0.5s ease-out';
                    } else {
                        row.style.display = 'none';
                    }
                });

                // Update active filter button
                filterButtons.forEach(btn => btn.classList.remove('active'));
                this.classList.add('active');
            });
        });

        // Add hover effects to contract rows
        contractRows.forEach(row => {
            row.addEventListener('mouseenter', function() {
                this.style.transform = 'scale(1.02) translateY(-2px)';
                this.style.boxShadow = '0 8px 25px rgba(0,0,0,0.1)';
            });
            
            row.addEventListener('mouseleave', function() {
                this.style.transform = 'scale(1) translateY(0)';
                this.style.boxShadow = 'none';
            });
        });

        // Add loading states to action buttons
        const actionButtons = document.querySelectorAll('.action-buttons .btn');
        actionButtons.forEach(button => {
            button.addEventListener('click', function() {
                const icon = this.querySelector('i');
                const originalClass = icon.className;
                
                icon.className = 'fas fa-spinner fa-spin';
                
                setTimeout(() => {
                    icon.className = originalClass;
                }, 2000);
            });
        });

        // Animate contract stats
        const statNumber = document.querySelector('.stat-number');
        if (statNumber) {
            const target = parseInt(statNumber.textContent);
            let current = 0;
            const increment = target / 50;
            
            const timer = setInterval(() => {
                current += increment;
                if (current >= target) {
                    current = target;
                    clearInterval(timer);
                }
                statNumber.textContent = Math.floor(current);
            }, 50);
        }
    });
</script>
{% endblock %}