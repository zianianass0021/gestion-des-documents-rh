{% extends 'base_minimal.html.twig' %}

{% block title %}Système RH - Accueil{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h1 class="mb-0">
                    <i class="fas fa-building me-2"></i>
                    Système RH Professionnel
                </h1>
            </div>
            <div class="card-body">
                <h2>Bienvenue dans notre système RH</h2>
                <p class="lead">Gestion moderne des ressources humaines</p>
                
                <div class="mt-4">
                    <a href="/login" class="btn btn-primary btn-lg me-3">
                        <i class="fas fa-sign-in-alt me-2"></i>
                        Se connecter
                    </a>
                    <button class="btn btn-outline-primary btn-lg" onclick="alert('Test button works!')">
                        <i class="fas fa-info-circle me-2"></i>
                        Test
                    </button>
                </div>
                
                <div class="row mt-5">
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body text-center">
                                <i class="fas fa-users fa-3x text-primary mb-3"></i>
                                <h5>Employés</h5>
                                <p class="text-muted">Gestion des employés</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body text-center">
                                <i class="fas fa-file-contract fa-3x text-success mb-3"></i>
                                <h5>Contrats</h5>
                                <p class="text-muted">Gestion des contrats</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body text-center">
                                <i class="fas fa-envelope fa-3x text-warning mb-3"></i>
                                <h5>Demandes</h5>
                                <p class="text-muted">Gestion des demandes</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
